                                                @Html.ValidationMessageFor(model => model.PersonPhone.PhoneNumber, "", new { @class = "text-danger" })
                                            </div>
                                        </div>


                                        <div class="form-group">
                                            @Html.LabelFor(model => model.PersonPhone.PhoneNumberTypeID, htmlAttributes: new { @class = "control-label col-md-10" })
                                            <div class="col-md-10">
                                                @Html.DropDownListFor(model => model.PersonPhone.PhoneNumberTypeID, new SelectList(Model.Phonetype, "Key", "Value"), "-Select Option-", new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.PersonPhone.PhoneNumberTypeID, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <br />
                                <br />
                                <br />
                            </div>


                            @*
                            /////////////////////////////////////Details of emplyment TAB////////////////////////////////////////////////
                            *@

                            <div role="tabpanel" class="tab-pane fade" style="background-color: #80808061; width: 1000px" id="Professional">
                                <br />
                                <h3 style="margin-left: 10%">Professional Details</h3>
                                <br />
                                <br />
                                <div class="form-horizontal align-items-center justify-content-center">
                                    <div class="row align-items-center justify-content-center">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.JobTitle, htmlAttributes: new { @class = "control-label col-md-10" })
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.JobTitle, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.JobTitle, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <br />

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.EmployeeDepartmentHistory.DepartmentID, htmlAttributes: new { @class = "control-label col-md-10" })
                                            <div class="col-md-10">
                                                @Html.DropDownListFor(model => model.EmployeeDepartmentHistory.DepartmentID, new SelectList(Model.GetDepartments, "Key", "Value"), "-Select Option-", new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.EmployeeDepartmentHistory.DepartmentID, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row align-items-center justify-content-center">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.SalariedFlag, htmlAttributes: new { @class = "control-label col-md-13" })
                                            <div class="col-md-10">
                                                <div class="checkbox">
                                                    @Html.EditorFor(model => model.SalariedFlag)
                                                    @Html.ValidationMessageFor(model => model.SalariedFlag, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row align-items-center justify-content-center">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.EmployeeDepartmentHistory.ShiftID, htmlAttributes: new { @class = "control-label col-md-10" })
                                            <div class="col-md-10">
                                                @Html.DropDownListFor(model => model.EmployeeDepartmentHistory.ShiftID, new SelectList(Model.GetShift, "Key", "Value"), "-Select Option-", new { htmlAttributes = new { @class = "form-control" } })

                                                @Html.ValidationMessageFor(model => model.EmployeeDepartmentHistory.ShiftID, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.EmployeePayHistory.Rate, htmlAttributes: new { @class = "control-label col-md-10" })
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.EmployeePayHistory.Rate, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.EmployeePayHistory.Rate, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>

                                    <br />
                                    <div class="row align-items-center justify-content-center">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.EmployeePayHistory.PayFrequency, htmlAttributes: new { @class = "control-label col-md-10" })
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.EmployeePayHistory.PayFrequency, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.EmployeePayHistory.PayFrequency, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <br />
                                </div>
                            </div>

                            @*
                            //////////////////////////////////////////Address TAB/////////////////////////////////
                            *@

                            <div role="tabpanel" class="tab-pane fade" style="background-color: #80808061; width: 1000px" id="Address">
                                <br />
                                <h3 style="margin-left: 10%">Residential Details</h3>
                                <br />
                                <br />
                                <div class="form-horizontal align-items-center justify-content-center">
                                    <div class="row align-items-center justify-content-center">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.BusinessEntityAddress.AddressTypeID, htmlAttributes: new { @class = "control-label col-md-10" })
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.BusinessEntityAddress.AddressTypeID, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.BusinessEntityAddress.AddressTypeID, "", new { @class = "text-danger" })
                                            </div>
