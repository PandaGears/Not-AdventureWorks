@model WTCPortal.Models.Employee

@{
    ViewBag.Title = "Employee Update";
    Layout = "~/Views/Shared/Employee/_LayoutEmployeeEdit.cshtml";
}
<br />
<div class="center align-items-center justify-content-center" style="margin-left: 40%">
    <nav aria-label="breadcrumb">
        <ol class="BBackground breadcrumb">
            <li class="breadcrumb-item"><a onclick="location.href='@Url.Action("Index", "Home")'">Home</a></li>
            <li class="breadcrumb-item" aria-current="page"><a onclick="location.href='@Url.Action("Index", "Employee")'">Employees</a></li>
            <li class="breadcrumb-item" aria-current="page">@Html.ActionLink("Employee Details", "Details", new { BusinessEntityID = Model.BusinessEntityID }, null)</li>
            <li class="breadcrumb-item BCactive" aria-current="page">Edit Details</li>
        </ol>
    </nav>
</div>
@using (Html.BeginForm("Edit", "Employee", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <h4 class="center">Update @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.MiddleName) @Html.DisplayFor(model => model.LastName)</h4>

    <div class="form-horizontal">
