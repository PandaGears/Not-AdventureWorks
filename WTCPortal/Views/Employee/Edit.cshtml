        <br />
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.BusinessEntityID)
        @Html.HiddenFor(model => model.NameStyle)
        @Html.HiddenFor(model => model.Suffix)
        @Html.HiddenFor(model => model.LoginID)
        @Html.HiddenFor(model => model.rowguid)
        @Html.HiddenFor(model => model.ModifiedDate)
        @Html.HiddenFor(model => model.BirthDate)
        @Html.HiddenFor(model => model.BusinessEntityID)
        @Html.HiddenFor(model => model.VacationHours)
        @Html.HiddenFor(model => model.SickLeaveHours)
        @Html.HiddenFor(model => model.CurrentFlag)
        @Html.HiddenFor(model => model.PersonType)

