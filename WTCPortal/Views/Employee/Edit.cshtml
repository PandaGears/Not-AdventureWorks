                                                @Html.DropDownListFor(model => model.EmailPromotion, new SelectList(Model.Emailnotifications, "Key", "Value"), new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.EmailPromotion, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <br />

                                    <div class="row align-items-center justify-content-center">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.PersonPhone.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-10" })
                                            <div class="col-md-10">
